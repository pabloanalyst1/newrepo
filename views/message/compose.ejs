<h1>New Message (Prueba Forzada)</h1>

<!-- Mostrar datos de recipients para depuración -->
<pre><%= JSON.stringify(recipients, null, 2) %></pre>

<form action="/messages/compose" method="post">
  <label for="message_to">To:</label>
  <select id="message_to" name="message_to" required>
    <option value="">Select recipient</option>
    <option value="1">Usuario 1 (test)</option>
    <option value="2">Usuario 2 (test)</option>
  </select>

  <label for="subject">Subject:</label>
  <input type="text" id="subject" name="subject" value="<%= subject || '' %>" required>

  <label for="body">Message:</label>
  <textarea id="body" name="body" required><%= body || '' %></textarea>

  <button type="submit">Send</button>
</form>

<a href="/messages">← Back to Inbox</a>

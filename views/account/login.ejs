<h1>Login</h1>

<% if (typeof errors !== 'undefined' && Array.isArray(errors) && errors.length > 0) { %>
  <ul class="error-list">
    <% errors.forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

<% if (typeof messages !== 'undefined' && Array.isArray(messages) && messages.length > 0) { %>
  <ul class="flash-messages">
    <% messages.forEach(msg => { %>
      <li><%= msg %></li>
    <% }) %>
  </ul>
<% } %>

<form action="/account/login" method="post">
  <label for="account_email">Email</label>
  <input 
    type="email" 
    id="account_email" 
    name="account_email" 
    required 
    value="<%= typeof account_email !== 'undefined' ? account_email : '' %>">

  <label for="account_password">Password</label>
  <input 
    type="password" 
    id="account_password" 
    name="account_password" 
    required>

  <button type="submit">Login</button>
</form>

<p>Not a user yet? <a href="/account/register">Create an account</a></p>
